{{!< default}}

<header class="absolute top-0 left-0 p-4 min-w-full">
    <a class="flex items-center text-sm md:text-base max-w-min" href="{{@site.url}}">
        <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path></svg>
        Back
    </a>
</header>

{{#post}}

<article>
    <h1 class="text-4xl font-extrabold mb-12">{{title}}</h1>

    <div class="max-w-none prose lg:prose-lg">
        {{content}}
    </div>

    <div class="mt-8 text-sm text-gray-400">
        <p>Published on <time class="" datetime="{{date format="YYYY-MM-DD"}}">{{date format="D MMM YYYY"}}</time></p>
        <p>{{tags separator=", " prefix="Tagged in: "}}</p>
    </div>
</article>


{{/post}}
